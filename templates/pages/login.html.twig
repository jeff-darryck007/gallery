{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 500px;">
        <h2 class="mb-4 text-center"> Connexion</h2>

        {# Formulaire de login #}
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_row(form.email, {'label': 'Adresse e-mail'}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
        </div>

        <button class="btn btn-primary w-100 mt-3">Se connecter</button>

        {{ form_end(form) }}

        <div class="text-center mt-4">
            <p>Pas encore inscrit ? <a href="{{ path('register') }}">Cr√©er un compte</a></p>
        </div>
    </div>
{% endblock %}
