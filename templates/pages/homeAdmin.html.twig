{% extends 'base.html.twig' %}

{% block title %}Administration - Peintures{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center text-primary">ğŸ¨ Gestion des Peintures</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table table-striped align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Titre</th>
                <th>VisibilitÃ©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for painting in paintings %}
            <tr>
                <td>{{ painting.id }}</td>
                <td><img src="images/{{ painting.image }}" width="100px"></td>
                <td>{{ painting.title }}</td>
                <td>
                    {% if painting.visible %}
                        <span class="badge bg-success">Visible</span>
                    {% else %}
                        <span class="badge bg-secondary">MasquÃ©e</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_painting_edit', {id: painting.id}) }}" class="btn btn-sm btn-outline-primary">âœï¸ Modifier</a>

                    <form action="{{ path('admin_painting_toggle', {id: painting.id}) }}" method="post" style="display:inline;">
                        <button class="btn btn-sm btn-outline-warning">
                            {% if painting.visible %}Masquer{% else %}Afficher{% endif %}
                        </button>
                    </form>
                    
                    <form action="{{ path('admin_painting_delete', {id: painting.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Supprimer cette peinture ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ painting.id) }}">
                        <button class="btn btn-sm btn-outline-danger">ğŸ—‘ï¸ Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">Aucune peinture enregistrÃ©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
